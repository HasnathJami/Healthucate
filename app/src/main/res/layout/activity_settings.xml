<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5487CA"
    tools:context=".SettingsActivity">



    <EditText

        android:id="@+id/nameEditTexId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DATE: dd/mm/yyyy"


        />

    <EditText
        android:id="@+id/ageEditTextId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time: hh:mm"


        />




    <EditText
        android:id="@+id/genderEditTextId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"



        />



    <EditText
        android:id="@+id/idEditTextId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Schedule Number You Want To Update/Delete"
        android:layout_marginBottom="10dp"



        />


    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButtonId"
        android:background="#DFDADA"


        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/showButtonId"
        android:background="#C1CE01"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButtonId"
        android:background="#A168E2"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteButtonId"
        android:background="#F88181"

        />









</LinearLayout>